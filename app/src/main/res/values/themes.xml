<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PetProject" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/bkg_gray</item>
        <item name="colorPrimaryVariant">@color/bkg_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">@color/bkg_gray</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Normal">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textColor">@color/t_gray</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">8sp</item>
    </style>
</resources>