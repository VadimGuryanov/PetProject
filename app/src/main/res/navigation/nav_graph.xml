<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="kpfu.itis.petproject.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_charactersFragment"
            app:destination="@id/charactersFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/charactersFragment"
        android:name="kpfu.itis.petproject.list.CharactersFragment"
        android:label="fragment_character"
        tools:layout="@layout/fragment_characters">

        <action android:id="@+id/action_charactersFragment_to_detailsFragment"
            app:destination="@+id/detailsFragment">
            <argument
                android:name="userId"
                app:argType="integer"
                android:defaultValue="1" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="kpfu.itis.petproject.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
    </fragment>

</navigation>